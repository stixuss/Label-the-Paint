<Window x:Class="Label_the_Paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Label_the_Paint"
        mc:Ignorable="d"
        Title="Lebel the Paint" Height="300" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True" 
        MouseDown="Window_MouseDown">
    <Window.Resources>
        
    </Window.Resources>

    <Border Background="#ded5d0 "
            CornerRadius="20">
        <Grid Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Nazwa"/>
            <TextBox Grid.Column="1"
                     Text="Wprowadź nazwę"
                     Style="{StaticResource TextBoxTheme}"/>

            <TextBlock Grid.Row="1" 
                       Text="Numer"/>
            <TextBox Grid.Column="1" 
                     Grid.Row="1"
                     Text="Wprowadź numer inwentrzowy"
                     Style="{StaticResource TextBoxTheme}"/>

            <TextBlock Grid.Row="2"
                       Text="Katalog"/>
            <TextBox Grid.Column="1" 
                     Grid.Row="2"
                     Text="Wprowadź numer katalogu"
                     Style="{StaticResource TextBoxTheme}"/>

            <TextBlock Grid.Row="3"
                       Text="Data"/>
            <DatePicker Grid.Column="1" 
                        Grid.Row="3"
                        FontSize="15"/>

            <TextBlock Grid.Row="4"
                       Text="Kod Farby"/>
            <TextBox Grid.Column="1" 
                     Grid.Row="4"
                     Text="Wprowadź kod farby"
                     Style="{StaticResource TextBoxTheme}"/>

            <Button Content="Drukuj" 
                    Grid.Column="1"
                    Grid.Row="6"
                    IsEnabled="False"
                    Command="{Binding PrintLabel}"></Button>

            <Label Grid.ColumnSpan="2"
                   Grid.Row="8"
                   Content="@"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="10"></Label>
        </Grid>
    </Border>
</Window>
